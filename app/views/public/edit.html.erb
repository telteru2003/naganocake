<% provide(:title, "登録情報確認") %>
<% if flash[:notice] %>
	<div class="alert alert-danger text-center">
			<%= flash[:notice] %>
	</div>
<% end %>
<div class="container">
    <div class="row">
        <div class="col-lg-2">
            <h3>登録情報編集</h3>
        </div>
    </div>
    <%= render 'form', customer: @customer %>


    <div class="row">
    <div class="col-lg-10 col-lg-offset-1">
    <%= form_for(customer) do |f| %>
        <table class="edit_customer">
        <% if flash[:alert] %>
        <div class="alert alert-danger">
        <%= flash[:alert] %>
        </div>
        <% end %>
            <tr>
                <th>名前</th>
                <td>
                    <span>(姓) </span>
                </td>
                <td>
                    <%= f.text_field :first_name %>
                    <span>　(名)　</span>
                    <%= f.text_field :last_name %>
                </td>
            </tr>
            <tr>
                <th>フリガナ</th>
                <td>
                    <span>(セイ) </span>
                </td>
                <td>
                    <%= f.text_field :kana_first_name %>
                    <span>　(メイ) </span>
                    <%= f.text_field :kana_last_name %>
                </td>
            </tr>
            <tr>
                <th>メールアドレス</th>
                <td></td>
                <td><%= f.email_field :email %><td>
            </tr>
            <tr>
                <th>郵便番号(ハイフンなし)</th>
                <td></td>
                <td><%= f.text_field :postcode %></td>
            </tr>
            <tr>
                <th>住所</th>
                <td></td>
                <td><%= f.text_field :address %></td>
            </tr>
            <tr>
                <th>電話番号(ハイフンなし)</th>
                <td></td>
                <td><%= f.phone_field :phone_number %></td>
            </tr>
        </table>
        <div class="row">
            <div class="col-lg-2">
                <%= f.submit "登録内容を保存する", class: "btn btn-info" %>
            </div>
    <% end %>
            <div class="col-lg-3">
            <%= link_to "退会する", quit_customer_path, class: "btn btn-danger" %>
            </div>
        </div>
    </div>
</div>
</div>






