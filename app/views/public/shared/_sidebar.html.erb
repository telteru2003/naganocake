<div class="container">
  <div class="row">

    <div class="col-lg-2">

      <table class="table table-hover table-bordered">
        <thead>
          <tr>
            <th class="active text-center"><h5 class="genre_said">ジャンル検索</h5></th>
          </tr>
        </thead>
        <tbody>
          <% genres.each do |genre| %>
          <tr><td class="underline"><i class="fas fa-caret-right">
            <%= link_to genre.name, items_path(genre_id: genre.id), method: :get %>
          </td></tr>
          <% end %>
        </tbody>
      </table>

</div>
