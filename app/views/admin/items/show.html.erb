<% provide(:title, "商品詳細") %>
<div class="container">
  <h2 class="font-weight-bold my-5"><span style="background-color: #EEEEEE">　商品詳細　</span></h2>
    <div class="row align-items-center m-8">
      <div class="col-lg-5 text-center mb-5">

        <%= image_tag @item.get_image, size: "300x250" %>

      </div>
      <div class="col-lg-7">
          <table class="table">
            <tr>
              <th>商品名</th>
              <td><%= @item.name %></td>
            </tr>
            <tr>
              <th>商品説明</th>
              <td><%= @item.introduction %></td>
            </tr>
            <tr>
              <th>ジャンル</th>
              <td><%= @genre.name %></td>
            </tr>
            <tr>
              <th>
                  税込価格<br>
                  (税抜価格)
              </th>
              <td><%= (@item.price * 1.1).floor.to_s(:delimited) %><br> (<%= @item.price.to_s(:delimited) %>) 円</td>
            </tr>
            <tr>
              <th>販売ステータス</th>
                <td>
                     <% if @item.is_sold == true %>
                        <p class="text-success ">販売中</p>
                     <% else %>
                        <p class="text-secondary ">販売停止中</p>
                     <% end %>
                </td>
            </tr>
          </table>
          <div class="d-flex justify-content-around">
            <p><%= link_to '編集する', edit_admin_item_path(@item.id), class: 'btn btn-success' %></p>
            <p><%= link_to "商品一覧へ戻る", admin_items_path, class:"btn btn-outline-secondary"%></p>
          </div>
   　　 </div>
  　</div>
 </div>
