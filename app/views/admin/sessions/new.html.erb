<div class="container">
  <div class="row">
    <div class="col-lg-8 offset-2">

      <h3 style="padding: 10px; margin: 10px;">
        <span style="background-color: #EEEEEE">　管理者ログイン　</span>
      </h3>

<div class="container my-3">
  <div class="row">
    <div class="col-lg-10">

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="row my-3">
            <div class="col-md-3">
              <%= f.label :"メールアドレス" %>
            </div>
            <div class="col-md-9">
              <%= f.email_field :email, autofocus: true, placeholder:"例）sample@example.com", autocomplete: "email", class:"form-control" %>
            </div>
          </div>

          <div class="row my-3">
            <div class="col-md-3">
            <%= f.label :"パスワード" %>
            </div>
            <div class="col-md-9">
            <%= f.password_field :password, placeholder:"例）xxxxxx", autocomplete: "current-password", class:"form-control" %>
            </div>
          </div>

          <div class="row my-3">
            <div class="col-md-3"></div>
            <div class="col-md-9">
              <%= f.submit "ログイン",class: "btn btn-primary"%>
            </div>
          </div>
        <% end %><br>

      </div>
    </div>
  </div>
</div>
