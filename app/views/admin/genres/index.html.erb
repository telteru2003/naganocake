<div class="container">
    <div class="row">
        <div class="col-lg-12 mt-5">
          <h2 class="font-weight-bold my-5"><span style="background-color: #EEEEEE"> ジャンル一覧・追加 </span></h2>
        </div>
    </div>

        <table>
          <tr>
            <th style="padding: 20px;">
                  <%= form_with model: @genre,url: admin_genres_path,method: :post, remote: true do |f| %>
                    <%= f.label :name, "ジャンル名" %>
            </th>
            <td>
                    <%= f.text_field :name, id: "form" %>
                    <%= f.submit "新規登録", class:"btn btn-success ml-4 py-1" %>
                  <% end %>
            </td>
        </table>
</div>

<div class="row my-5">
  <div class="col-lg-5 mt-3">
    <table class="table">
      <thead>
        <tr style="background-color: #EEEEEE;">
          <th>ジャンル</th>
          <th></th>
        </tr>
      </thead>
      <tbody  id="genre_index_new">
        <%= render 'genre_new', genre: @genres %>
      </tbody>
    </table>
  </div>
</div>
